{% extends "RoSiteBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div class="error-msg">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

   {#  <label for="username">{{ 'security.login.username'|trans }}</label> #}
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Pseudo"/>

   {#  <label for="password">{{ 'security.login.password'|trans }}</label> #}
    <input type="password" id="password" name="_password" required="required" placeholder="Mot de passe"/>

    <div class="remember-div">
    	<div class="remember">
	    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" />
	    	<label for="remember_me"></label>		    
		</div>
		<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
	</div>
	<div class="clear"></div>
	<input type="submit" id="_submit" class="login-button" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
{% endblock fos_user_content %}